{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$comment": "The JSON schema for entering signing webpages",
  "type": "object",
  "required": [ "data" ],
  "properties": {
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "tagline",
          "link",
          "rationale"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "tagline": {
            "type": "string"
          },
          "link": {
            "type": "string"
          },
          "rationale": {
            "type": "string"
          }
        }
      }
    }
  }
}